<ul >
  {{#events}}
    <li>
        <h2>{{ title }}</h2>
        <p>{{ description }}</p>
        <p>Location: {{ location }}</p>
        <p>Likes: {{ likes }}  </p>
        <div class="row">
            <div class="col-md-1">
              <form method="POST" action="/event/like">
                <input type="hidden" value="{{id}}" name="id">
              <!--  <input class="btn btn-sm btn-primary"  type="submit" value="Like"> -->
              <button class="btn btn-sm btn-primary" type="submit"><i class="fas fa-thumbs-up"></i>  Like</button>
              </form>
            </div>
          <div class="col-md-1">
            <form method="POST" action="/event/unlike">
                <input  type="hidden" value="{{id}}" name="id">
               <!-- <input class="btn btn-sm btn-primary" type="submit" value="UN-Like"> -->
                <button class="btn btn-sm btn-primary" type="submit"><i class="fas fa-thumbs-down"></i>UN-Like</button>
            </form>
        </div>
      </div>
    </li>
  {{/events}}
</ul>